{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "outDir": "lib",

        "module": "ES2020",
        "moduleResolution": "Node",
        "importHelpers": true,

        "declaration": true,
        "declarationDir": "lib",

        "plugins": [{ "transform": "typescript-transform-extensions", "extensions": { ".ts": ".js" } }]
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts"]
}
